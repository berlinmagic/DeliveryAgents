<div class="fullpage-table accnt-form">
  <div class="table-row">
    <div class="banner-box responsive-hero fill">
      <div class="clearfix"></div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "centered-form", autocomplete: :off}) do |f| %>
        
        <h2><%= t('.sign_up', :default => "Sign up") %></h2>
        
        <%= devise_error_messages! %>
        
        <div class="inpt-group">
          <%#= f.text_field :first_name, class: "form-control", placeholder: t("helpers.label.user.first_name"), required: true, autofocus: true %>
          <%#= f.text_field :last_name, class: "form-control", placeholder: t("helpers.label.user.last_name"), required: true %>
          <%= f.email_field :email, class: "form-control", placeholder: "Your Email", required: true %>
          <%= f.password_field :password, class: "form-control", placeholder: "Choose a password", required: true %>
          <%#= f.password_field :password_confirmation, class: "form-control", placeholder: t("helpers.label.user.password_confirmation"), required: true %>
        </div>

        

        <%= f.submit t('.sign_up', :default => "Sign up"), class: "btn btn-lg btn-primary btn-block" %>
      <% end %>
      <div class="clearfix"></div>
    </div>
  </div>
  <div class="table-row">
    <div class="form-table-footer">
      <div class="corset center_text">
        <p>You allready have an account? Click <%= link_to "Login", new_user_session_path %>. Do you have <%= link_to "Problems", new_user_password_path %> while login.</p>
        <%= render "shared/app_footer" %>
      </div>
    </div>
  </div>
</div>


<%#= render "devise/shared/links" %>

